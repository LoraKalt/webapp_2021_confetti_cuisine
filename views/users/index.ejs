<h2 class="center">Users Table</h2>

<a href="/users/new">
  <button class="button mb-2">Create New User</button>
</a>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>ZipCode</th>
      <th>Password</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user=> { %>
      <tr>
        <td>
          <a href="<%=`/users/${user._id}`%>">
            <%= user.fullName %>
          </a>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.zipCode %>
        </td>
        <td>
          <!-- <%= user.password %> -->
          ************
        </td>
        <td>
          <a href="<%=`/users/${user._id}/edit`%>">
            Edit
          </a>
        </td>
        <td>
          <a href="<%=`/users/${user._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this record?')" a>
            Delete
          </a>
        </td>
      </tr>
      <% }); %>
  </tbody>
</table>
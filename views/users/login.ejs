<form class="form-signin" action="/users/login" method="POST">
    <h2>Login</h2>
    <label for="txtEmail">Email</label>
    <input type="email" name="email" id="txtEmail" class="form-control" placeholder="Email" autofocus required>

    <label for="txtPassword">Password</label>
    <input type="password" name="password" id="txtPassword" class="form-control" placeholder="Password" required>
    <button type="submit" class="button btn btn-lg">Login</button>
</form>